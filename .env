# Twitter API Credentials
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# Twitter Scraping Credentials (for twscrape)
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email
TWITTER_COOKIES=auth_token=xxx; ct0=yyy; guest_id=zzz; ...

# Bot Configuration
BOT_USERNAME=your_bot_username
TARGET_ACCOUNTS=account1,account2,account3

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Affiliate Marketing Configuration (Nouveau)
AFFILIATE_ENABLED=true
AFFILIATE_MAX_DAILY=8
AFFILIATE_MIN_SPACING_HOURS=1
AFFILIATE_MIN_INTENT_SCORE=15
AFFILIATE_MIN_CONFIDENCE=0.3

# Affiliate Analytics (Optionnel)
AFFILIATE_ANALYTICS_WEBHOOK=https://your-analytics-endpoint.com/webhook
AFFILIATE_CONVERSION_TRACKING=true

# Safety and Compliance
AFFILIATE_DISCLOSURE_REQUIRED=true
AFFILIATE_DISCLOSURE_TEXT=#ad #affiliate
AFFILIATE_RESPECT_DO_NOT_TRACK=true
AFFILIATE_MAX_RETRY_ATTEMPTS=3

# Advanced Affiliate Settings
AFFILIATE_USE_DYNAMIC_PRICING=false
AFFILIATE_SEASONAL_BOOST=false
AFFILIATE_COMPETITOR_AVOID=true
AFFILIATE_A_B_TEST_ENABLED=false

# Logging and Monitoring
AFFILIATE_LOG_LEVEL=INFO
AFFILIATE_METRICS_ENABLED=true
AFFILIATE_PERFORMANCE_THRESHOLD=0.05

# Rate Limiting for Affiliate
AFFILIATE_RATE_LIMIT_PER_HOUR=3
AFFILIATE_RATE_LIMIT_PER_DAY=8
AFFILIATE_BURST_LIMIT=2

# Content Quality Controls
AFFILIATE_MIN_TWEET_LENGTH=30
AFFILIATE_MAX_TWEET_LENGTH=280
AFFILIATE_AVOID_SPAM_KEYWORDS=buy now,click here,limited time,act fast,free money

# Target Audience Filters
AFFILIATE_MIN_FOLLOWER_COUNT=100
AFFILIATE_EXCLUDE_VERIFIED_ONLY=false
AFFILIATE_LANGUAGE_FILTER=en,fr
AFFILIATE_TIMEZONE_TARGETING=false

# Product Management
AFFILIATE_AUTO_DISABLE_LOW_PERFORMING=true
AFFILIATE_LOW_PERFORMANCE_THRESHOLD=0.02
AFFILIATE_PRODUCT_ROTATION_ENABLED=true
AFFILIATE_SEASONAL_PRODUCTS_CONFIG=affiliate_seasonal.json

# Integration with External Services
AFFILIATE_CRM_WEBHOOK=
AFFILIATE_ANALYTICS_SERVICE=
AFFILIATE_EMAIL_NOTIFICATIONS=false
AFFILIATE_SLACK_NOTIFICATIONS=false
AFFILIATE_SLACK_WEBHOOK=

# Backup and Recovery
AFFILIATE_BACKUP_ENABLED=true
AFFILIATE_BACKUP_FREQUENCY_HOURS=24
AFFILIATE_BACKUP_RETENTION_DAYS=30

# Testing and Development
AFFILIATE_TEST_MODE=false
AFFILIATE_DRY_RUN=false
AFFILIATE_DEBUG_SCORING=false
AFFILIATE_MOCK_RESPONSES=false
